{
  "manifest_version": 3,
  "name": "YouTube 自動跳過廣告",
  "version": "1.0.0",
  "description": "每秒偵測 YouTube 頁面，自動跳過廣告（可開始/停止）",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube 自動跳過廣告"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
